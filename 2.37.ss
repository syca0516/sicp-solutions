;;我们可以用序列操作简洁的表达基本的矩阵与向量运算
(load "sicp.ss")

;;点乘
(define (dot-product v w)
  (accumulate + 0 (map * v w)))

;;矩阵乘向量
(define (matrix-*-vector m v)
  (map (lambda (m-row) (dot-product m-row v))
       m))


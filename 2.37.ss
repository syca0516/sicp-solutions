;;转置
(define (transpose mat)
  (accumulate-n cons '() mat))

;;矩阵乘矩阵
(define (matrix-*-matrix m n)
  (let ((cols (transpose n)))
    (map (lambda (vector) (matrix-*-vector cols vector)) m))) 
